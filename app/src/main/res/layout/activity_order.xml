<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4cd137">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gojek"
            android:textSize="35dp"
            android:textColor="#fff"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

   <ImageView
       android:id="@+id/image_deliver"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/deliv"
       android:layout_centerInParent="true"/>
<TextView
    android:id="@+id/nama_order"
    android:layout_below="@+id/image_deliver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="text"
    android:textColor="#000"
    android:textSize="25dp"
    android:gravity="center"/>
    <TextView
        android:id="@+id/alamat_order"
        android:layout_below="@+id/nama_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:textColor="#000"
        android:textSize="25dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/pesanan"
        android:layout_below="@+id/alamat_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="text"
        android:textColor="#000"
        android:textSize="25dp"
        android:gravity="center"/>
<Button
    android:id="@+id/btn_cancel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Cancel"
    android:background="#4cd137"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_below="@+id/pesanan"
    />
</RelativeLayout>